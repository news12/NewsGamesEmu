unit Log.DB;

interface

Uses
  Vcl.ComCtrls,
  FireDAC.Comp.Client,
  Base.Color,
  Base.Struct,
  DB.Conect,
  System.SysUtils;

Type
  tLog = Class
  Protected
    { Protected Class }

  Private
    { Private Class }

  Public
    { Public Class }
    constructor Create;
    class procedure DBLog(Log: TRichEdit; Msg: String; Tipo: Integer);
    destructor Destroy; override;

  End;

Var
  nConection: TConectDB;

implementation

constructor tLog.Create;
begin
  nConection := TConectDB.Create;
end;

class procedure tLog.DBLog(Log: TRichEdit; Msg: String; Tipo: Integer);
Var
  Cor: Integer;
  qLog: TFDQuery;
  uSQL: String;
begin
  case Tipo of
    0: // Sucess
      Cor := VerdeC;
    1: // Error
      Cor := VermelhoC;
    2: // Notificaton
      Cor := AzulC;
    3: // Normal
      Cor := Branco
  else
    Cor := Cinza;
  end;
  Log.SelAttributes.Color := Cor;
  Log.Lines.Add(Msg);
  uSQL := 'WHERE ID = 0';
  qLog := nConection.SelectTable(TableLog, '', '', uSQL);
  With qLog Do
  begin
    Insert;
    FieldByName('DATA').AsDateTime := Date;
    FieldByName('DATA_HORA').AsDateTime := Time;
    FieldByName('DESCRICAO').AsString := Msg;
    Post;
  end;

end;

end.
